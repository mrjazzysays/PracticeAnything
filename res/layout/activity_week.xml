<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_margin="0dp"
    tools:context=".WeekActivity" >

    <Button
        android:id="@+id/deleteUsername"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_toRightOf="@+id/editText1"
        android:layout_alignTop="@+id/editText1"
        android:text="Delete" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
        android:layout_marginRight="17dp"
        android:layout_toRightOf="@+id/listView1"
        android:layout_below="@+id/editText2"
        android:ems="10"
        android:hint="delete username" />

    <Button
        android:id="@+id/addUser"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/editText2"
        android:text="Add" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_toRightOf="@+id/listView1"
        android:ems="10"
        android:hint="add username"
         >

        
    </EditText>

    <ListView
        android:id="@+id/listView1"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/users"
        android:layout_alignRight="@+id/users"
        
        android:layout_below="@+id/users" >
    </ListView>

    <TextView
        android:id="@+id/users"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listWeek"
        android:layout_alignLeft="@+id/listWeek"
        android:layout_alignParentLeft="true"
        android:text="Users" />

    <TextView
        android:id="@+id/listWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="187dp"
        android:text="listWeek"
        android:textSize="16sp" />

</RelativeLayout>
